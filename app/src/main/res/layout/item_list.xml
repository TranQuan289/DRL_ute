<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/signin"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên:"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txt_msv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã Sinh Viên:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/txt_name"
        />
    <TextView
        android:id="@+id/txt_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điểm:"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/txt_msv"
        />
    <TextView
        android:id="@+id/txt_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xếp Loại:"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/txt_point"
        />
    <TextView
        android:id="@+id/txt_name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/txt_name"
        android:layout_alignBottom="@id/txt_name"
        />

    <TextView
        android:id="@+id/txt_msv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_msv"
        android:text="Mã Sinh Viên:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"

        android:layout_alignBottom="@id/txt_msv"
        />

    <TextView
        android:id="@+id/txt_point_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_point"
        android:text="Điểm:"
        android:textSize="20dp"
        android:paddingLeft="10dp"

        android:textStyle="bold"
        android:layout_alignBottom="@id/txt_point"
        />
    <TextView
        android:id="@+id/txt_level_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xếp Loại:"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/txt_level"
        android:layout_alignBottom="@+id/txt_level"
        />
    </RelativeLayout>
</LinearLayout>